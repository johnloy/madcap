{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./src",
    "lib": ["es2016", "dom"],
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./lib",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2015",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
