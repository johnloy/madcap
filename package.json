{
  "name": "madcap",
  "version": "0.1.0",
  "description": "A crazy useful JS error handling toolkit",
  "main": "lib/madcap.js",
  "module": "es/madcap.js",
  "types": "lib/madcap.d.ts",
  "repository": "git@github.com:johnloy/madcap.git",
  "author": "John Loy <loy.john@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "run-p clean:es5 clean:es && run-p 'build:* -w'",
    "clean": "run-p clean:*",
    "clean:es5": "shx rm -rf lib",
    "clean:es": "shx rm -rf es",
    "clean:umd": "shx rm -rf dist",
    "build": "run-s clean build:*",
    "build:es5": "tsc",
    "build:es": "tsc -m es6 -t es6 --outDir es",
    "build:umd": "webpack",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@types/stacktrace-js": "^0.0.32",
    "stacktrace-js": "^2.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.0",
    "@types/node": "^8.0.53",
    "@types/webpack": "^3.8.1",
    "babel-preset-env": "^1.6.1",
    "fs-extra": "^5.0.0",
    "husky": "^0.14.3",
    "lerna": "^2.7.0",
    "lint-staged": "^6.0.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.9.1",
    "shx": "^0.2.2",
    "stacktrace-gps": "^3.0.2",
    "ts-loader": "^3.2.0",
    "ts-node": "^3.3.0",
    "typescript": "^2.6.2",
    "webpack": "^3.9.1"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "prettier --write",
      "tslint",
      "git add"
    ]
  }
}
